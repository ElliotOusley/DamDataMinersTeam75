<h1>Manage Order Items</h1>

<h2>Add Item to Order</h2>
<form method="POST" action="/add-orderitem">
  <label>Product:</label>
  <select name="productID">
    <option value="1">Cod Roe</option>
    <option value="2">Rockfish Fillet</option>
    <option value="3">Crab Claws</option>
  </select><br>
  <label>Order:</label>
  <select name="orderID">
    <option value="1">Order #1</option>
    <option value="2">Order #2</option>
  </select><br>
  <label>Quantity:</label><input type="number" name="quantity"><br>
  <label>Price:</label><input type="number" step="0.01" name="price"><br>
  <input type="submit" value="Add to Order">
</form>

